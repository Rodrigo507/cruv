{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ post.detail }}</td>
            </tr>
            <tr>
                <th>Publisheddate</th>
                <td>{{ post.publisheddate ? post.publisheddate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ post.owner }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>


{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Detail</th>
                <th colspan="2">Publish Date</th>
                <th>Owner</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.detail|slice(0,100)}}...</td>
                <td colspan="2">{{ post.publisheddate ? post.publisheddate|date('Y-m-d') : '' }}</td>
                <td>{{ post.owner }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('post_new') }}">Create new</a>
{% endblock %}

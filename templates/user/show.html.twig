{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mt-2 mb-2" href="{{ path('user_index') }}">Back to list</a>

    <a class="btn btn-warning mt-2 mb-2" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
